<!doctype html>
<html>
  <head>
    <title>Blog</title>
  </head>
  <body>
    <h1>Blog</h1>
      <% posts.forEach(function (post) { %>
      <div>
        <h2><%= post.title %></h2>

        <% if (post.Author) { %>
        <p>by: <a href="/authors/<%=post.Author.id%>"><%=post.Author.name%></a></p>
        <% } else { %>
        <p>by: Anonymous</p>
        <% } %>

        <% if (post.Tags && post.Tags.length > 0) { %>
        <p>tags:
          <% post.Tags.forEach(function (tag) { %>
          <a href="/tags/<%=tag.name%>"><%= tag.name %></a>
          <% }) %>
        <p>
        <% } %>

        <p><%= post.content %></p>
      </div>
      <% }) %>
  </body>
</html>

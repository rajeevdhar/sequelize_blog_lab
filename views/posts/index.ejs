<!doctype html>
<html>
  <head>
    <title>Blog</title>
  </head>
  <body>
    <h1>Blog</h1>
      <% posts.forEach(function (post) { %>
      <div>
        <h2><%= post.title %></h2>

        <% if (post.Author) { %>
        <p>by: <a href="/authors/<%=post.Author.id%>"><%=post.Author.name%></a></p>
        <% } else { %>
        <p>by: Anonymous</p>
        <% } %>

        <% include ../partials/tagList.ejs %>

        <p><%= post.content %></p>
      </div>
      <% }) %>
  </body>
</html>
